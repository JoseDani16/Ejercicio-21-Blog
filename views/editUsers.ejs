<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css" type="text/css" />
  </head>

  <body>
    <%- include("./partials/navbar.ejs") %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">First</th>
          <th scope="col">Last</th>
          <th scope="col">Handle</th>
        </tr>
      </thead>
      <tbody>
        <% for(const user of users) { %>

        <tr>
          <td><p><%=user.firstname %></p></td>
          <td><p><%=user.lastname %></p></td>
          <td><p><%=user.email %></p></td>
          <td>
            <form action="/usuarios/<%=user.id %>" method="get">
              <button class="btn btn-danger" type="submit">Delete</button>
            </form>
          </td>
          <td>
            <form action="/usuarios/<%=user.id %>/editar" class="d-flex" method="post">
              <div class="form-floating">
                <select
                  class="form-select"
                  id="floatingSelect"
                  aria-label="Floating label select example"
                  name="levelPermission"
                >
                  <option selected><%= user.levelPermission %></option>
                  <option value="1">Reader</option>
                  <option value="2">Writer</option>
                  <option value="3">Editor</option>
                  <option value="4">Admin (warning)</option>
                </select>
                <label for="floatingSelect"></label>
              </div>
              <button class="btn btn-info" type="submit">Update</button>
            </form>
          </td>
        </tr>

        <% } %>
      </tbody>
    </table>
    <%- include("partials/footer") %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
