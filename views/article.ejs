<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/article.css" type="text/css" />
    <script src="https://kit.fontawesome.com/69dcecacbf.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <%- include("./partials/navbar.ejs") %>

    <div class="jumbotron">
      <div class="container text-center">
        <h1 class="fs-1 text-white fw-bold"><%= article.dataValues.title %></h1>
        <p class="fs-6 text-white-50">
          Creted by <%= article.user.firstname+' '+article.user.lastname %>
        </p>
      </div>
    </div>

    <div class="container mt-4">
      <div class="row d-flex flex-column align-items-center">
        <div>
          <p><%= article.content %></p>
        </div>

        <div class="col-7 pt-2 pb-4">
          <hr />
        </div>

        <div class="col-7">
          <form action="/comentarios/<%= article.id %>/article" method="post">
            <h4>Add your comment</h4>
            <div class="form-group">
              <label for="commentTextArea"></label>
              <textarea
                required
                class="form-control"
                id="commentTextArea"
                rows="4"
                name="comment"
              ></textarea>
            </div>
            <div id="button" class="d-grid gap-2 mt-4">
              <button class="btn btn-primary p-0" type="submit">Send</button>
            </div>
          </form>
        </div>

        <div id="comments" class="col-7">
          <h4>Comments (<%= comments.length %>)</h4>
          <% for (const comment of comments) {%>
            <p><%= comment.comment %></p>
          <div class="d-flex justify-content-between"> 
          <small><%= comment.firstname +' '+ comment.lastname %></small>
          <%if(user.roleId > 2){%>
            <a href="/comentarios/<%=comment.id%>/gestionar" class="btn btn-light">gestionar</a>
            <%}%>
          </div>
          <hr />

          <%} %>
        </div>
      </div>
    </div>
    <%- include("partials/footer") %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
